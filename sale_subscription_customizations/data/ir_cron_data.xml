<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron job per creare alert di scadenza abbonamenti -->
    <record id="ir_cron_subscription_expiration_alert" model="ir.cron">
        <field name="name">Sale Subscription: Alert scadenza abbonamenti</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model._cron_create_expiration_alerts()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
